<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance2"
        android:layout_below="@+id/distance1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance3"
        android:layout_below="@+id/distance2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance4"
        android:layout_below="@+id/distance3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance5"
        android:layout_below="@+id/distance4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance6"
        android:layout_below="@+id/distance5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance7"
        android:layout_below="@+id/distance6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0 m"
        android:id="@+id/distance8"
        android:layout_below="@+id/distance7"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/abc_ab_share_pack_holo_dark" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Start Scanning"
        android:id="@+id/switchB"
        android:layout_below="@+id/distance8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="室內定位功能"
        android:id="@+id/button"
        android:layout_below="@+id/distance8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
